<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.yuanyu.tx.mapper.UserMapper">

    <resultMap type="cn.yuanyu.tx.entity.User" id="UserMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="age" column="age" jdbcType="INTEGER"/>
        <result property="email" column="email" jdbcType="VARCHAR"/>
    </resultMap>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into easycode_db.user(user_name, password, name, age, email)
        values (#{userName}, #{password}, #{name}, #{age}, #{email})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update easycode_db.user
        <set>
            <if test="userName != null and userName != ''">
                user_name = #{userName},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="age != null">
                age = #{age},
            </if>
            <if test="email != null and email != ''">
                email = #{email},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from easycode_db.user
        where id = #{id}
    </delete>

    <!--查询单个-->
    <select id="queryById" resultMap="UserMap">
        select id,
               user_name,
               password,
               name,
               age,
               email
        from easycode_db.user
        where id = #{id}
    </select>

    <select id="queryAll" resultType="cn.yuanyu.tx.entity.User">
        select *
        from easycode_db.user
    </select>


</mapper>